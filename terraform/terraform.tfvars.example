# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# Required: Your Google Cloud Project ID
project_id = "your-gcp-project-id"

# Optional: Customize regions (defaults to us-east1)
region = "us-east1"
zone   = "us-east1-b"

# Required: Google Drive folder IDs (get these from your Google Drive URLs)
# Raw folder: where users upload audio/video files
raw_folder_id = "your-raw-folder-id-here"

# Processed folder: where transcription results are saved
processed_folder_id = "your-processed-folder-id-here"

# Optional: Legacy webhook monitoring (leave empty if not using)
monitored_folder_id = ""

# Optional: Service account name (has sensible default)
# service_account_name = "transcription-service"
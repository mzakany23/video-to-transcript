# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

project_id = "your-gcp-project-id"
region     = "us-east1"

# Dropbox credentials
dropbox_access_token = "your-dropbox-access-token"
dropbox_app_secret   = "your-dropbox-app-secret"

# Dropbox folder paths (optional - defaults shown)
# dropbox_raw_folder       = "/raw"
# dropbox_processed_folder = "/processed"

# Gmail notification settings
gmail_address      = "your-email@gmail.com"
gmail_app_password = "your-16-char-app-password"  # From Google App Passwords
notification_emails = ["recipient@example.com"]   # List of emails to receive notifications

# Service versions - bump these to trigger deployments
webhook_version      = "v1.2.2"
worker_image_version = "v1.1.1"
downloader_version   = "v1.0.0"

# Zoom credentials (optional - only needed if using Zoom downloader service)
# To enable Zoom integration, uncomment and fill in these values:
# zoom_account_id     = "your-zoom-account-id"
# zoom_client_id      = "your-zoom-client-id"
# zoom_client_secret  = "your-zoom-client-secret"
# zoom_webhook_secret = "your-zoom-webhook-secret"